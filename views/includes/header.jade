span
	nav.top-bar(data-topbar)
		ul.title-area
			li.name
				h1
					a(href='/') Passwordless
			li.toggle-topbar.menu-icon
				a(href='#')
					span Menu
		section.top-bar-section
			ul.left
				li
					a(href='/getstarted') Getting started
				li
					a(href='/deepdive') Deep dive
				li
					a(href='/docs/Passwordless.html') Docs
				li
					a(href='https://github.com/florianheinemann/passwordless') GitHub
				li
					a(href='/about') About
			ul.right
				if user
					li
						a(href='/users/edit')
							img(src='#{user.gravatar}&s=45')
					li
						a(href='/users/edit') #{user.username || user.email} 
					li
						a(href='/account/logout') Logout
				else
					li
						a(href='/account/login') Demo &amp; Login
